{
  "name": "@kikiutils/node",
  "version": "6.0.1",
  "description": "A modular utility library for Node.js offering secure hashing, flexible logging, datetime manipulation, and more.",
  "author": "kiki-kanri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikiutils/node.git"
  },
  "keywords": [
    "consola",
    "crypto",
    "datetime",
    "enum",
    "environment",
    "hash",
    "logging",
    "math",
    "node",
    "pino",
    "string",
    "utilities"
  ],
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs"
    }
  },
  "files": [
    "./dist",
    "./src"
  ],
  "engines": {
    "node": ">=18.12.1"
  },
  "scripts": {
    "build": "ts-project-builder './src/**/*.ts' --clean --sourcemaps",
    "bumplog": "changelogen --bump",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "release": "pnpm run lint && pnpm run build && pnpm run test && changelogen --hideAuthorEmail --push --release && npm publish",
    "test": "cross-env TZ=UTC jest --coverage"
  },
  "devDependencies": {
    "@kikiutils/changelogen": "^0.8.0",
    "@kikiutils/eslint-config": "^0.12.0",
    "@kikiutils/tsconfigs": "^3.0.3",
    "@noble/hashes": "^1.7.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "consola": "^3.4.2",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.5.0",
    "jest": "^29.7.0",
    "millify": "^6.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.3.1",
    "ts-project-builder": "3.4.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
